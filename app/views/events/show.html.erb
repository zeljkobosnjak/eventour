<h1><%= @event.title %></h1>

<div>
    <p><%= @event.description %></p>

    <p><%= @event.start_date %></p>

    <p><%= @event.end_date %></p>

    <p><%= @event.venue %></p>
    
    <p><%= @event.location %></p>
</div>

<p><%= link_to "Edit Event", edit_event_path(@event) %>
<p><%= button_to "Delete Event", event_path(@event), method: :delete, form: { data: { turbo_confirm: 'Are you sure?'}} %></p>